{
  "info": {
    "name": "Old.New API",
    "description": "AI-Powered Document Enhancement Platform API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000/api",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    },
    {
      "key": "documentId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\",\n  \"firstName\": \"John\",\n  \"lastName\": \"Doe\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('token', response.token);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('token', response.token);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/auth/profile",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "profile"]
            }
          }
        }
      ]
    },
    {
      "name": "Documents",
      "item": [
        {
          "name": "Upload Document",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": []
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/documents/upload",
              "host": ["{{baseUrl}}"],
              "path": ["documents", "upload"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('documentId', response.documentId);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Classify Document",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/documents/{{documentId}}/classify",
              "host": ["{{baseUrl}}"],
              "path": ["documents", "{{documentId}}", "classify"]
            }
          }
        },
        {
          "name": "Analyze Document",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/documents/{{documentId}}/analyze",
              "host": ["{{baseUrl}}"],
              "path": ["documents", "{{documentId}}", "analyze"]
            }
          }
        },
        {
          "name": "Enhance Document - Quick",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"level\": \"quick\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/documents/{{documentId}}/enhance",
              "host": ["{{baseUrl}}"],
              "path": ["documents", "{{documentId}}", "enhance"]
            }
          }
        },
        {
          "name": "Enhance Document - Professional",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"level\": \"professional\",\n  \"industry\": \"technology\",\n  \"audience\": \"investors\",\n  \"tone\": \"professional\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/documents/{{documentId}}/enhance",
              "host": ["{{baseUrl}}"],
              "path": ["documents", "{{documentId}}", "enhance"]
            }
          }
        },
        {
          "name": "Enhance Document - Premium",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"level\": \"premium\",\n  \"industry\": \"finance\",\n  \"audience\": \"executives\",\n  \"tone\": \"formal\",\n  \"specialInstructions\": \"Focus on ROI and data-driven insights\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/documents/{{documentId}}/enhance",
              "host": ["{{baseUrl}}"],
              "path": ["documents", "{{documentId}}", "enhance"]
            }
          }
        },
        {
          "name": "Export as DOCX",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/documents/{{documentId}}/export?format=docx&title=My Document&author=John Doe",
              "host": ["{{baseUrl}}"],
              "path": ["documents", "{{documentId}}", "export"],
              "query": [
                {
                  "key": "format",
                  "value": "docx"
                },
                {
                  "key": "title",
                  "value": "My Document"
                },
                {
                  "key": "author",
                  "value": "John Doe"
                }
              ]
            }
          }
        },
        {
          "name": "Export as LaTeX",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/documents/{{documentId}}/export?format=latex&title=My Research Paper&author=John Doe",
              "host": ["{{baseUrl}}"],
              "path": ["documents", "{{documentId}}", "export"],
              "query": [
                {
                  "key": "format",
                  "value": "latex"
                },
                {
                  "key": "title",
                  "value": "My Research Paper"
                },
                {
                  "key": "author",
                  "value": "John Doe"
                }
              ]
            }
          }
        },
        {
          "name": "Get Document",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/documents/{{documentId}}",
              "host": ["{{baseUrl}}"],
              "path": ["documents", "{{documentId}}"]
            }
          }
        },
        {
          "name": "List Documents",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/documents?limit=20&offset=0",
              "host": ["{{baseUrl}}"],
              "path": ["documents"],
              "query": [
                {
                  "key": "limit",
                  "value": "20"
                },
                {
                  "key": "offset",
                  "value": "0"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/health",
          "host": ["{{baseUrl}}"],
          "path": ["health"]
        }
      }
    }
  ]
}
